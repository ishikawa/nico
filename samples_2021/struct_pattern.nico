struct Point {
    x: i32,
    y: i32,
}

fun destructuring_point_assignment(p: Point)
    case p
    when Point { x, y: 0 }
        println_i32(x)
    when Point { x: 0, y }
        println_i32(y)
    when Point { x, y }
        println_i32(x)
        println_i32(y)  
    end
end

destructuring_point_assignment(Point { x: 0, y: 7 })    # => 7
destructuring_point_assignment(Point { x: 8, y: 0 })    # => 8
destructuring_point_assignment(Point { x: 99, y: 88 })  # => 99, 88